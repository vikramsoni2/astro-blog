---
import ThemeToggleButton from './ThemeToggleButton.astro';
const { current = '' } = Astro.props;
---

<style>
  nav {
    align-items: center;
    display: flex;
    flex: 1;
    font-weight: 300;
    justify-content: flex-end;
  }

  a {
    color: inherit;
    text-decoration: none;
    padding: 3px 0; */
    display: block;
    position: relative;
    margin-left: 20px;
    /* min-width: 70px; */
    text-align: center;
  }

  a.selected::before {
    content: '';
    position: absolute;
    height:1px;
    left:0;
    right: 0;
    bottom: 0;
    background: var(--text-secondary);
  }

  a.selected:hover::before {
    content: '';
    position: absolute;
    height:1px;
    left:0;
    right: 0;
    bottom: 0;
    background: var(--primary-color);
  }

  a:not(.selected) {
    opacity: 0.8;
  }

  .theme-toggle-container {
    width: 75px;
  }
</style>

<nav>
  <a class={current === "" ? "selected" : ""} href='/'>Home</a>
  <a class={current === "about" ? "selected" : ""} href='/about'>About</a>
  <a class={current === "blog" ? "selected" : ""} href='/blog'>Posts</a>
  
  <div class="theme-toggle-container">
    <ThemeToggleButton/>
  </div>
</nav>
